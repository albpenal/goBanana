<Page
    x:Class="goBanana.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:goBanana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Width="1280" Height="720">

    <Page.Resources>
        <Style x:Key="MyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FEDD5F"/>
            <Setter Property="BorderBrush" Value="#FECD13"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Page.Resources>

    <Grid>

        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>-->

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*" />
            <ColumnDefinition Width="36*" />
            <ColumnDefinition Width="21*" />
        </Grid.ColumnDefinitions>

        <Image Source="/Assets/background.png" Stretch="Fill" Grid.ColumnSpan="3"/>

        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Margin="15,20,0,0" Spacing="35" Height="80" Width="520">
            <Button Content="JUEGO" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="SKINS"  Style="{StaticResource MyButtonStyle}"/>
            <Button Content="GLOSARIO" Style="{StaticResource MyButtonStyle}"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" Spacing="10" Margin="20" Height="72" Width="288">
            <Button Content="OPCIONES" Style="{StaticResource MyButtonStyle}"/>
            <Button Content="INFO" Style="{StaticResource MyButtonStyle}" />
        </StackPanel>

        <TextBlock x:ConnectionId='2' x:Name="BananaCount" Text="0" FontSize="50" Margin="106,67,106,582" TextAlignment="Center" />
        <Button x:ConnectionId='3'                              Height="250" Width="250" HorizontalAlignment="Center"
                VerticalAlignment="Center" Background="Transparent">
            <Image Source="/Assets/banana.png" />
        </Button>
        <TextBlock x:ConnectionId='4' x:Name="ClickHere" Text="CLICK HERE" FontSize="50" Foreground="White" FontFamily="Century Gothic" FontWeight="Bold"
                   TextAlignment="Center" Grid.Column="0" HorizontalAlignment="Left" Margin="10,248,0,403" Width="297" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="-25.027"/>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</Page>

